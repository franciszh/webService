{
  "name": "node-typescript-webpack-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "start": "npm-run-all --parallel prettier watch:server watch:build",
    "watch:server": "nodemon \"./build/bundle.js\" --watch \"./build\" ",
    "watch:build": "webpack --watch",
    "build": "webpack",
    "test:e2e": "npm-run-all prettier cucumber",
    "cucumber": "cucumber-js --require-module ts-node/register 'tests/**/features/*.feature' -r 'tests/**/steps/*ts'",
    "prettier": "prettier --write \"{src,tests}/**/*.ts\""
  },
  "author": "Francis",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cucumber": "^4.0.5",
    "@types/express": "^4.16.1",
    "@types/supertest": "^2.0.7",
    "cucumber": "^5.1.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.16.4",
    "supertest": "^4.0.0",
    "ts-loader": "^3.0.5",
    "ts-node": "^8.0.3",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  }
}
